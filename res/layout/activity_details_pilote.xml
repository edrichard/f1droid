<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/lnFnPilote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dateOfBirthPilote"
        android:layout_alignParentLeft="true"
        android:paddingLeft="10dp"
        android:text="@string/lnFnPilote"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/withe" />

    <TextView
        android:id="@+id/dateOfBirthPilote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:text="@string/dateOfBirthPilote"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/withe" />

    <TextView
        android:id="@+id/nationalityPilote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lnFnPilote"
        android:layout_marginTop="26dp"
        android:paddingLeft="10dp"
        android:text="@string/nationalityPilote"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/withe" />

</RelativeLayout>